{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "kanameishi",
  "version": "2.3.0",
  "identifier": "com.viewer.wolfx",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "要石 kanameishi v2.3.0",
        "width": 1280,
        "height": 720,
        "minWidth": 640,
        "minHeight": 360,
        "resizable": true,
        "fullscreen": false,
        "backgroundThrottling": "disabled"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": "^(([A-Z]:\\\\)|(/\\w+)|(https?://\\w+)).+"
    }
  }
}
